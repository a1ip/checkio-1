import math
def simple_areas(*args):
    if len(args) == 1:
        return round((math.pi * (args[0]**2) / 4),2)
        
    elif len(args) == 2:
        return args[0] * args[1]
        
    elif len(args) == 3:
        c = float(sum(args) / 2.0)
        return round(math.sqrt(c * (c - args[0]) * (c - args[1]) * (c - args[2])), 2)
